{
  "name": "cisse-vue-ui",
  "version": "0.2.4",
  "description": "Vue 3 + TypeScript + Tailwind CSS v4 component library",
  "author": "Cisse",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      }
    },
    "./components/core": {
      "import": {
        "types": "./dist/components/core/index.d.ts",
        "default": "./dist/components/core/index.js"
      }
    },
    "./components/form": {
      "import": {
        "types": "./dist/components/form/index.d.ts",
        "default": "./dist/components/form/index.js"
      }
    },
    "./components/feedback": {
      "import": {
        "types": "./dist/components/feedback/index.d.ts",
        "default": "./dist/components/feedback/index.js"
      }
    },
    "./components/layout": {
      "import": {
        "types": "./dist/components/layout/index.d.ts",
        "default": "./dist/components/layout/index.js"
      }
    },
    "./components/type": {
      "import": {
        "types": "./dist/components/type/index.d.ts",
        "default": "./dist/components/type/index.js"
      }
    },
    "./composables": {
      "import": {
        "types": "./dist/composables/index.d.ts",
        "default": "./dist/composables/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "vue",
    "vue3",
    "typescript",
    "tailwindcss",
    "tailwind",
    "ui",
    "components",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moulayecisse/cisse-vue-ui.git"
  },
  "scripts": {
    "dev": "vite --config playground/vite.config.ts",
    "build": "vue-tsc --noEmit && vite build && bun run build:css",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles/components.css -o ./dist/style.css --minify",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "@iconify/vue": ">=4.0.0",
    "tailwindcss": ">=4.0.0",
    "vue": ">=3.4.0"
  },
  "peerDependenciesMeta": {
    "pinia": {
      "optional": true
    },
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@iconify/vue": "^5.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "ajv": "^8.17.1",
    "eslint": "^9.39.1",
    "pinia": "^3.0.4",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vue-tsc": "^2.2.12"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "tailwind-merge": "^3.4.0"
  }
}
